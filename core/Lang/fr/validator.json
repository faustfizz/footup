{
    "present"           : ":attribute doit être présent",
    "required"          : ":attribute !est|sont requis",
    "required-if"       : ":attribute !est|sont requis si :field est égale à %value",
    "required-with"     : ":attribute !est|sont requis quand :field est présent",
    "required-with-all" : ":attribute !est|sont requis",
    "required-with-any" : ":attribute !est|sont requis",
    "required-without"  : ":attribute !est|sont requis quand :field n'est pas présent",
    "equals"            : ":attribute doit être égale à :field",
    "not-equals"        : ":attribute doit pas être égale à :field",
    "identical"         : ":attribute doit être identique à :field",
    "not-identical"     : ":attribute doit pas être identique à :field",
    "in"                : ":attribute doit être un de: %values",
    "not-in"            : ":attribute doit pas être un de: %values",
    "contains"          : ":attribute doit contenir: %values",
    "contains-only"     : ":attribute doit seulement contenir: %values",
    "min-arr-count"     : ":attribute doit contenir au moins :min item(s)",
    "max-arr-count"     : ":attribute doit contenir au plus :max item(s)",
    "min"               : ":attribute doit être au moins :min",
    "max"               : ":attribute doit être au plus :max",
    "greater-than"      : ":attribute doit être plus grand que :field",
    "less-than"         : ":attribute doit être plus petit que :field",
    "alpha"             : ":attribute doit seulement contenir des caractères alpha",
    "alpha-numeric"     : ":attribute doit seulement contenir des caractères alpha-numérique",
    "min-str-len"       : ":attribute doit être au moins :min caractère(s) de long",
    "max-str-len"       : ":attribute doit être au plus :max caractère(s) de long",
    "str-len"           : ":attribute doit avoir exactement %value de long",
    "human-name"        : ":attribute doit être un nom valide",
    "is"                : ":attribute doit être du type :type",
    "password"          : ":attribute doit avoir au moins :chars caractères de long, 1 lettre majuscule, 1 lettre minuscule, 1 nombre et 1 symbol",
    "email"             : ":attribute doit être une adresse email valide",
    "date"              : ":attribute doit être une date au format: :format",
    "url"               : ":attribute doit être une URL valide",
    "uuid"              : ":attribute doit être un UUID valide",
    "card-number"       : ":attribute doit être un numéro de carte valide",

    "cannotMatch"       : "Impossible de faire correpondre {0} au champ {1} !"
}